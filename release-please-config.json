{
  "packages": {
    "packages/zeta_flutter": {
      "release-type": "dart",
      "package-name": "zeta_flutter",
      "component": "components"
    },
    "packages/zeta_flutter_theme": {
      "release-type": "dart",
      "package-name": "zeta_flutter_theme",
      "component": "theme"
    },
    "packages/zeta_flutter_utils": {
      "release-type": "dart",
      "package-name": "zeta_flutter_utils",
      "component": "utils"
    },
    "packages/zeta_icons": {
      "release-type": "dart",
      "package-name": "zeta_icons",
      "component": "icons"
    }
  },
  "pull-request-title-pattern": "chore(${component}): release ${version}",
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "tag-separator": "-",
  "extra-files": [
    "example/lib/widgets.dart",
    "widgetbook/lib/introduction.dart",
    "example/lib/home.dart"
  ],
  "separate-pull-requests": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "✨ New Features"
    },
    {
      "type": "fix",
      "section": "🪲 Bug Fixes"
    },
    {
      "type": "revert",
      "section": "👀 Reverts"
    },
    {
      "type": "docs",
      "section": "📈 Documentation"
    },
    {
      "type": "deps",
      "section": "⛓️ Dependencies"
    },
    {
      "type": "test",
      "section": "🧪 Tests"
    },
    {
      "type": "chore",
      "section": "🧹 Miscellaneous Chores"
    },
    {
      "type": "iconadded",
      "section": "✅ Icons added"
    },
    {
      "type": "iconremoved",
      "section": "✂️ Icons removed"
    },
    {
      "type": "iconupdated",
      "section": "🎨 Icons updated"
    },
    {
      "type": "perf",
      "section": "Performance Improvements",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": true
    },
    {
      "type": "style",
      "section": "Styles",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    }
  ]
}